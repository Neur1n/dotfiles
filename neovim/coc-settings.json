{
  "diagnostic.enable": true,
  "diagnostic.errorSign": "✘",
  "diagnostic.hintSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },
  // coc-diagnostic
  "diagnostic-languageserver.filetypes": {
    "html": "tidy",
    "vim": "vint"
  },
  // coc-git
  "git.branchCharacter": "",
  // coc-python
  "python.jediEnabled": false,
  // coc-snippets
  "snippets.ultisnips.enable": true,
  // coc-spell-checker
  "cSpell.enabledLanguageIds": [
    "html",
    "latex",
    "markdown",
    "plaintext",
    "text",
  ],
  // coc-texlab
  "latex.build.executable": "latexmk",
  "latex.build.args": [
    "-file-line-error",
    "-interaction=nonstopmode",
    "-outdir=build",
    "-pdf",
    "-shell-escape",
    "-synctex=1",
    "-verbose"
  ],
  "latex.build.onSave": true
}
